{
  "name": "meeting-summarizer",
  "version": "1.0.0",
  "description": "Real-time Meeting Recorder with AI-powered Analysis",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --open=index.html",
    "dev": "live-server --port=3000 --watch=**/*.{html,css,js}",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/style.css -o dist/style.min.css --map",
    "build:js": "terser src/app.js -o dist/app.min.js --source-map --compress --mangle",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.{js,html,css}",
    "serve": "python -m http.server 8000",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "date-fns": "^2.30.0",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0",
    "terser": "^5.20.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1"
  },
  "keywords": [
    "meeting",
    "recorder",
    "transcription", 
    "ai",
    "speech-to-text",
    "action-items",
    "webrtc"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/meeting-summarizer.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/meeting-summarizer/issues"
  },
  "homepage": "https://yourusername.github.io/meeting-summarizer",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "prettier --write"],
    "*.{html,css}": ["prettier --write"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}